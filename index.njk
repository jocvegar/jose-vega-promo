<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
  function form() {
    const db = firebase.firestore();
    return {
      error: false,
      name: "",
      email: "",
      message: "",
      valid: false,
      submit() {
        if (this.valid && this.validateEmail(this.email)) {
          db.collection("messages")
            .add({
              name: this.name,
              email: this.email,
              message: this.message,
              date: new Date(),
            })
            .then(() => {
              Swal.fire({
                title: "Muchas gracias!",
                text: "Pronto me comunicaré contigo",
                icon: "success",
                showConfirmButton: false,
                timer: 2500,
                timerProgressBar: true,
              });
              this.name = "";
              this.email = "";
              this.message = "";
            })
            .catch((error) => console.log("error", error));
        } else {
          this.error = true;
          setTimeout(() => {
            this.error = false;
          }, 2000);
        }
      },
      validateEmail(email) {
        var re = /\S+@\S+\.\S+/;
        return re.test(email);
      },
      validate() {
        this.valid =
          this.name.length > 0 &&
          this.email.length > 0 &&
          this.message.length > 0;
      },
    };
  }
</script>

